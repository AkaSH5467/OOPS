#include<iostream>
#include<string.h>
using namespace std;

class Hero{

    //properties
    private:
     int health;


    public:
    char *name;
    int level;

    //Default Constructor
    Hero(){
        cout<<"HeHe"<<endl;
        name = new char[100];
        health=0;
        level=0;
        
    }

    //Parameterized Constructor
    Hero(int level,int health)
    {
        this->health=health;
        this->level=level;
    }

    //Copy Constructor
    Hero(Hero& temp)
    {
       char *ch = new char[strlen(temp.name)+1];
        strcpy(ch,temp.name);
        this->name=ch;                     //deep copy (copying the same name to different address)
         this->health=temp.health;
        this->level=temp.level;

    } 
    

    //Destructor
    ~Hero(){
        cout<<"Bye Bye Blyat"<<endl;
    }


//Member Functions
    void sethealth(int h)  //setter
    {
        health=h;
    }

    void setlevel(int l) //setter
    {
        level=l;
    }

    void setname(char name[])
    {
        strcpy(this->name,name);
    }

    int gethealth() //getter
    {
        
      return health;
    }

    int getlevel() //getter
    {
        return level;
    }

    void print()
    {
        cout<<"[Name is "<<this->name<<" , ";
        cout<<"health is "<<this->health<<" , ";
        cout<<"level is "<<this->level<<" ]";
        cout<<endl;

    }

    
};


int main()
{
    /*Hero h1;
    cout<<"Size : "<<sizeof(h1)<<endl;
    //h1.setdata();
    cout<<"Health is : "<<h1.gethealth();
    //cout<<"Level : "<<h1.level<<endl;*/

/*
    //static Allocation
