    cout<<"Health is "<<h1.gethealth()<<endl;


    //dynamic Allocation
    Hero *h2 = new Hero;
    (*h2).sethealth(23);
    cout<<"Health is "<<(*h2).gethealth()<<endl;
*/


/*
